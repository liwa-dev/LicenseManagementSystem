                            <TextField fx:id="Surname" text="klm7" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                            
                            <Label text="Date Of Birth:" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                            <DatePicker fx:id="dobDatePicker" GridPane.columnIndex="3" GridPane.rowIndex="0" />
                            
                            <Label text="Adress:" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                            <TextField fx:id="Adress" text="206455267" GridPane.columnIndex="3" GridPane.rowIndex="1" />
                            
                            <Label text="Phone:" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                            <TextField fx:id="phoneField" GridPane.columnIndex="3" GridPane.rowIndex="2" />
                            
                            <Label text="Status:" GridPane.columnIndex="2" GridPane.rowIndex="3" />
                            <CheckBox fx:id="statusCheckBox" GridPane.columnIndex="3" GridPane.rowIndex="3" />
                            
                            <Label text="LicenseClass:" GridPane.columnIndex="2" GridPane.rowIndex="4" />
                            <ComboBox fx:id="licenseClassComboBox" GridPane.columnIndex="3" GridPane.rowIndex="4" />
                            
                            <Label text="Payment:" GridPane.columnIndex="2" GridPane.rowIndex="5" />
                            <TextField fx:id="payment" GridPane.columnIndex="3" GridPane.rowIndex="5" />
                        </children>
                        <rowConstraints>
                            <RowConstraints />
                            <RowConstraints />
                            <RowConstraints />
                            <RowConstraints />
                            <RowConstraints />
                            <RowConstraints />
