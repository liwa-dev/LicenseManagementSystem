                            <TextField fx:id="codeLicense" text="N9" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                            
                            <Label text="Gender:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                            <ComboBox fx:id="genderComboBox" promptText="Male" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                            
                            <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                            <TextField fx:id="name" text="Saber@gmail.com" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                            
